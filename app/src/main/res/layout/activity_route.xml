<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_activity_route"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/back_activity_route"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:tint="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/route_panel_activity_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_activity_route">

        <RelativeLayout
            android:id="@+id/origin_relative_layout_activity_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/origin_icon_activity_route"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_oval"
                    android:tint="#000000"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/origin_activity_route"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@id/origin_icon_activity_route"
                android:background="#EEEEEE">

                <TextView
                    android:id="@+id/origin_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/vertical_line_background"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/destination_relative_layout_activity_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_relative_layout_activity_route"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/destination_icon_activity_route"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="25dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_square"
                    android:tint="#000000"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/destination_activity_route"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@+id/destination_icon_activity_route"
                android:background="#EEEEEE">

                <TextView
                    android:id="@+id/destination_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/continue_activity_route"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_centerVertical="true"
            android:tint="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"/>

    </RelativeLayout>

</RelativeLayout>