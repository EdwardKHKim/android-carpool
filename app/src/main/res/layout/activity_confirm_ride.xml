<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_activity_confirm_ride"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="#000000" />


    <ImageView
        android:id="@+id/icon_car_activity_confirm_ride"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/car"
        android:layout_centerHorizontal="true"
        android:rotation="90"
        android:layout_marginTop="100dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_car_activity_confirm_ride"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/confirm_click"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/origin_confirm_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/origin_icon_confirm_ride"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_square"
                    android:tint="#000000"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/origin_text_view_activity_confirm_ride"
                    android:layout_toEndOf="@+id/origin_icon_confirm_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coquitlam"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/vertical_line_background"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/destination_confirm_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/origin_confirm_ride"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/destination_icon_confirm_ride"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_oval"
                    android:tint="#000000"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/destination_text_view_activity_confirm_ride"
                    android:layout_toEndOf="@+id/destination_icon_confirm_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metrotown SkyTrain Station"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/wallet_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_wallet" />

            <TextView
                android:id="@+id/cost_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/wallet_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cost_text_view"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:text="CAD"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_rectangle_background"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp">

            <EditText
                android:id="@+id/phone_number_activity_confirm_ride"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:hint="Enter phone number"
                android:textColor="#000000"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="phone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/confirm_click"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Confirm ride"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>